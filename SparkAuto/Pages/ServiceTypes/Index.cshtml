@page
@model SparkAuto.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service Type List</h2>
        </div>
        <div class="col-6 text-right">
            @if (this.User.IsInRole(Utility.SD.AdminEndUser))
            {
            <a asp-page="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Create New</a>
            }
        </div>
    </div>
    <br />
    <div>
        @if (Model.ServiceType.Count == 0)
        {
            <p>No Service Type exists, please create a new service types.</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceType[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceType[0].Price)
                    </th>
                    <th>
                        <td>
                            
                        </td>
                    </th>
                </tr>
                @foreach (var item in Model.ServiceType)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        @if (User.IsInRole(Utility.SD.AdminEndUser)) {
                        <a title="Edit" class="btn btn-primary text-white" asp-page="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>

                        <a title="Delete" class="btn btn-danger text-white" asp-page="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                        }
                        <a title="Details" class="btn btn-success text-white" asp-page="Details" asp-route-id="@item.Id">
                            <i class="far fa-list-alt"></i>
                        </a>

                    </div>
                </td>
            </tr>
                }
            </table>
        }
    </div>
</div>
