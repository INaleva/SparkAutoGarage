@page
@model SparkAuto.DetailsModel


<br />
<h2 class="text-info">Service Type Details</h2>
<br />
<div class=" border  backgroundWhite">
    <div class="form-group row">
        <div class="col-2">
            <label class="mt-2" asp-for="ServiceType.Name"></label>
        </div>
        <div class="col-5">
            <input asp-for="ServiceType.Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label class="mt-2" asp-for="ServiceType.Price"></label>
        </div>
        <div class="col-5">
            <input type="text"  asp-for="ServiceType.Price" disabled class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            <label class="mt-2" asp-for="ServiceType.Description"></label>
        </div>
        <div class="pt-5 col-5">
            <input style="background: transparent; border:none; color:#000" asp-for="ServiceType.Description" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-6">
                    @if (this.User.IsInRole(Utility.SD.AdminEndUser))
                    {
                        <a asp-page="Edit" asp-route-id="@Model.ServiceType.Id" class="btn btn-info form-control">Edit</a>
                    }
                </div>
                <div class="col-6">
                    <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>

        </div>
    </div>

</div>